@model int

@*
    script from fontawesome 
    https://fontawesome.com/kits/0bcca8558c/setup

*@

<head>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<td style="width:100px">
    <div class="btn-group">
        <a asp-action="Edit" asp-controller="SpecialTag" class="btn btn-success" asp-route-id="@Model">
            <i class="fa-solid fa-pen-to-square"></i>
        </a>
        <a asp-action="Delete" asp-controller="SpecialTag" class="btn btn-danger" asp-route-id="@Model">
            <i class="fa-sharp fa-solid fa-trash"></i>
        </a>
        <a asp-action="Details" asp-controller="SpecialTag" class="btn btn-success" asp-route-id="@Model">
            <i class="fa-sharp fa-solid fa-list"></i>
        </a>

    </div>
</td>
