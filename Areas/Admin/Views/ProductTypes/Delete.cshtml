@model OnLineShop.Models.Product_Type

<br />

@if (TempData["delfail"] != null)
{
    <div class="text text-danger">@TempData["delfail"]</div>
}
<h2 class="text-info">Delete product</h2>

<form asp-action="Delete" method="post">
    <input type="hidden"  asp-for="Id"/>
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Producttype"></label>

            </div>
            <div class="col-5">
                <input class="form-control" readonly="readonly" asp-for="Producttype" />
            </div>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to list</a>
        </div>



    </div>

</form>