@model OnLineShop.Models.Products

<br />
<h2>Delete Product</h2>
<form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <input asp-for="Id" type="hidden" />
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" readonly="readonly" class="form-control form-control-sm" />
                </div>
                <span asp-validation-for="Name"></span>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" readonly="readonly" class="form-control form-control-sm" />
                </div>
                <span asp-validation-for="Price"></span>
            </div>
            <br />
            
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductColor" readonly="readonly" class="form-control form-control-sm" />
                </div>
                <span asp-validation-for="ProductColor"></span>
            </div>
            <br />


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypeId"></label>
                </div>
                <div class="col-8">
                    @if (ViewBag.ptype != null)
                    {

                        <select name="ProductTypeId">
                            @foreach (var item in ViewBag.ptype)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    }

                </div>
                <span asp-validation-for="ProductTypeId"></span>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SpecialTagId"></label>
                </div>
                <div class="col-8">
                    <select name="SpecialTagId">
                        @if (ViewBag.stg != null)
                        {
                            @foreach (var item in ViewBag.stg)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        }
                    </select>

                </div>
                <span asp-validation-for="SpecialTagId"></span>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IsAvailable"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IsAvailable" readonly="readonly" type="checkbox" />
                </div>
                <span asp-validation-for="IsAvailable"></span>
            </div>
            <br />
            <div class="form-group">
              <input type="submit" class="btn btn-primary" value="Delete" asp-route-id="@Model.Id" />
                <a asp-action="Index" class="btn btn-success">Back to list</a>
            </div>

        </div>

        <div class="col-1"></div>
        <div class="col-3">
            <img src="~/@Model.Image" width="100%" />
        </div>



    </div>
</form>