@model OnLineShop.Models.Products

<br />
<h2 class="text-info">Add New Product</h2>

     <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="p-4 border rounded ">
         <div asp-validation-summary="ModelOnly" class="text-danger">
         </div>
            <div class="form-group row">
         <div class="col-2">
             <label asp-for="Name"></label>
         </div>
         <div class="col-5">
                <input asp-for="Name" class="form-control form-control-sm" />
         </div>
         <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
        <div class="form-group row">
            <div class="col-2">
             <label asp-for="Price">Price</label>
         </div>
         <div class="col-5">
                <input asp-for="Price" class="form-control form-control-sm" />
         </div>
         <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        <br />
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Image" ></label>
                </div>
                <div class="col-5">
                <input asp-for="Image" class="form-control form-control-sm" type="file" />
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        <br />
            <div class="form-group row">
         <div class="col-2">
                    <label>Product Color</label>
         </div>
         <div class="col-5">
                <input asp-for="ProductColor" class="form-control form-control-sm" />
         </div>
         <span asp-validation-for="ProductColor"></span>
            </div>
        <br />
            <div class="form-group row">
                <div class="col-2">
                <label asp-for="ProductTypeId"></label>
                </div>
                <div class="col-5">
                @if (ViewBag.producttype != null )
                {
                    <select name="ProductTypeId">
                        @foreach (var item in ViewBag.producttype)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    
                }
               
               @* <select asp-for="ProductTypeId" asp-items="ViewBag.producttypeid"></select>*@
               @* <input asp-for="ProductTypeId" class="form-control form-control-sm" />*@
                </div>
                <span asp-validation-for="ProductTypeId"></span>
            </div>
        <br />
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="SpecialTagId"></label>
                </div>
                <div class="col-5">
                @if (ViewBag.sptag != null)
                {
                    <select name="SpecialTagId">
                        @foreach (var item in ViewBag.sptag)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>

                }

                @*<select asp-for="SpecialTagId" asp-items="ViewBag.specialtagid"></select>*@
              @*  <input asp-for="SpecialTagId" class="form-control form-control-sm" />*@
                </div>
                <span asp-validation-for="SpecialTagId"></span>
            </div>
        <br />
            <div class="form-group row">
         <div class="col-2">
             <label asp-for="IsAvailable"></label>
         </div>
         <div class="col-5">
                <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
         </div>
         <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
        <br />
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Save" />
                <a asp-action="Index" class="btn btn-primary">Back to list</a>
            </div>
    </div>
</form>