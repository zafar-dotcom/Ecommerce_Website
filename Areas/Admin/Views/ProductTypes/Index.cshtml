@* Product type of product type controler for area admin *@


@using OnLineShop.Models;
@model IEnumerable<Product_Type>


<br />
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Product List </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-info">
            <i class="fa-solid fa-plus"></i> New Product Type
            </a>
        </div>
    </div>
<br />
<div>
<table class="table table-striped border">
    <tr class="table-info">
        <th>@Html.DisplayNameFor(c=>c.Producttype)</th>
        <th></th>
    </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Producttype</td>
                
                <td>
                    <partial name="_ButtonPartial" model="@item.Id"></partial>
                </td>

            </tr>
        }
    </table>
</div>


        @section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(
        function(){
            
                var showlert = '@TempData["showalert"]';
                var delalert = '@TempData["delalert"]';
                if (showlert === "True") {
                    var save = '@TempData["product_type_created"]';                 
                   if(save!=null){
                        alertify.success(save);
                   }
                }
                if (delalert === "deletetag") {
                        var delmssg = '@TempData["delmsg"]';
                        if(delmssg!=null){
                            alertify.success(delmssg);
                        }

                        
                   }       
           
                
        }
    )
    </script>
        }